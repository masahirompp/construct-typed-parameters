{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["esnext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "module": "esnext",
    "noFallthroughCasesInSwitch": true,
    "outDir": "./lib/",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "traceResolution": false,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts"]
}
